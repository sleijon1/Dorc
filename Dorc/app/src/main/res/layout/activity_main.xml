<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.example.dorc.GameView
            android:layout_width="248dp"
            android:layout_height="530dp"
            android:id="@+id/gameView2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/orcSelection"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/PlayerAttributes"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="388dp"
            android:layout_height="103dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/PlayerAttributes"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="134dp"
            android:layout_height="530dp"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/orcSelection"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/gameView2" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/PlayerAttributes"/>
    <android.support.v7.widget.Toolbar
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/settingSelection" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gameView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="107dp"
            android:layout_height="101dp"
            android:id="@+id/orcWarrior" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/orcMage"
            app:layout_constraintEnd_toEndOf="@+id/orcSelection"
            app:layout_constraintStart_toStartOf="@+id/orcSelection" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" android:layout_marginRight="3dp" android:layout_marginEnd="3dp"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="107dp"
            android:layout_height="101dp"
            android:id="@+id/orcRogue" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/orcWarrior" app:layout_constraintEnd_toEndOf="@+id/orcSelection"
            app:layout_constraintStart_toStartOf="@+id/orcSelection" android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp" android:layout_marginLeft="3dp" android:layout_marginStart="3dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="@+id/orcSelection"
            app:layout_constraintHorizontal_bias="0.523" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="107dp"
            android:layout_height="101dp"
            android:id="@+id/orcMage" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/orcSelection"
            app:layout_constraintEnd_toEndOf="@+id/orcSelection"
            app:layout_constraintStart_toStartOf="@+id/orcSelection" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" android:layout_marginRight="3dp" android:layout_marginEnd="3dp"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:id="@+id/playerProfileBtn" app:layout_constraintStart_toStartOf="@+id/PlayerAttributes"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/PlayerAttributes" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/PlayerAttributes" android:layout_marginTop="3dp"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:id="@+id/backpackBtn"
            app:layout_constraintTop_toTopOf="@+id/PlayerAttributes" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/PlayerAttributes"
            app:layout_constraintStart_toEndOf="@+id/playerProfileBtn" android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" android:layout_marginTop="3dp"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:id="@+id/talentBtn" app:layout_constraintStart_toEndOf="@+id/backpackBtn"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/PlayerAttributes" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/PlayerAttributes" android:layout_marginTop="3dp"/>
    <ImageButton
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_width="58dp"
            android:layout_height="49dp"
            android:id="@+id/spellBtn" app:layout_constraintStart_toEndOf="@+id/talentBtn"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/PlayerAttributes" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/PlayerAttributes" android:layout_marginTop="3dp"/>

</android.support.constraint.ConstraintLayout>