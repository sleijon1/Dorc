<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/colorPrimaryDark">
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline26"
            app:layout_constraintGuide_percent="0.20"
            android:orientation="horizontal"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline27"
            app:layout_constraintGuide_percent="0.10"
            android:orientation="horizontal"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline32"
            app:layout_constraintGuide_percent="0.0"
            android:orientation="horizontal"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline30"
            android:orientation="vertical" app:layout_constraintGuide_percent="0.4"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline31"
            app:layout_constraintGuide_percent="0.55"
            android:orientation="vertical"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline28"
            app:layout_constraintGuide_percent="0.30"
            android:orientation="horizontal"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline29"
            app:layout_constraintGuide_percent="0.40"
            android:orientation="horizontal"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.80"
            android:orientation="horizontal"/>
    <TextView
            android:text="@string/upgrade_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            android:textStyle="bold" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline32" android:fontFamily="sans-serif-thin"
            android:textAllCaps="false"
            android:lineSpacingExtra="24sp"/>
    <TextView
            android:text="@string/damage_upgrade_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dmgUpgradeTv" app:layout_constraintEnd_toStartOf="@+id/guideline30"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline26" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline27" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline26" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline28" app:layout_constraintEnd_toStartOf="@+id/guideline30"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintEnd_toStartOf="@+id/guideline30"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline29" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline28" android:textSize="18sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/dmgUpgradeBtn"
            app:layout_constraintTop_toTopOf="@+id/guideline27" app:layout_constraintStart_toStartOf="@+id/guideline30"
            app:layout_constraintEnd_toStartOf="@+id/guideline31"
            app:layout_constraintBottom_toTopOf="@+id/guideline26"
            android:background="@drawable/arrow_up"/>

</android.support.constraint.ConstraintLayout>